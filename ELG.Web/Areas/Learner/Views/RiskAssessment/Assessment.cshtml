@{
    ViewBag.Title = "Risk Assessment";
    Layout = "~/Areas/Learner/Views/Shared/_Layout.cshtml";
}

<div class="x_panel tile">
    <div class="x_title">
        <h1 class="h3 mb-3 text-primary fw-bold">Risk Assessments</h1>

        <div class="card mb-4">
            <div class="card-body">
                <!-- Row 1: Filters -->
                <div class="row g-3 align-items-end">
                    <div class="col-lg-4 col-md-6 col-sm-12">
                        <div class="form-floating">
                            <input type="text" class="form-control" id="txtRACourse" placeholder="Course name">
                            <label for="txtRACourse">Course Name</label>
                        </div>
                    </div>

                    <div class="col-lg-4 d-lg-block">
                        <div class="col-12 d-flex justify-content-end gap-2">
                            <button id="searchRACourse" class="btn btn-primary w-100">
                                <i class="fa fa-search me-1"></i> Search
                            </button>
                            <button id="clearSearchRACourse" class="btn btn-secondary w-100">
                                <i class="fa fa-times me-1"></i> Clear
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Table Section -->
    <div class="x_content">
        <div id="raErrorMessage"></div>
        <div class="table-responsive" id="raReportContainer">
            <table class="table table-striped table-hover table-bordered align-middle" id="tableRACourseList" width="100%" cellspacing="0">
                <thead class="table-light">
                    <tr>
                        <th>Course</th>
                        <th>Completion Date</th>
                        <th>Issue</th>
                        <th>Sign Off</th>
                        <th class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Dynamic rows go here -->
                </tbody>
            </table>
        </div>
    </div>
</div>
@{
    Html.RenderPartial("_RiskAssessmentModal");
    Html.RenderPartial("_ReviewRAResponses");
}

@section Scripts{
    <script>
        var hdnBaseUrl = '@Url.Content("~/Learner/RiskAssessment/")';
    </script>
    <script type="text/javascript" src="~/js/RiskAssessment/Assessment.js?v=1.1"></script>
}
