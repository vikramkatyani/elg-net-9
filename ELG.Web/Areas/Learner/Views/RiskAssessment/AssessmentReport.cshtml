@{
    ViewBag.Title = "Risk Assessment";
    Layout = "~/Areas/Learner/Views/Shared/_Layout.cshtml";
}

<!-- Page Heading -->
<div class="x_panel tile">
    <div class="x_title">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div>
                <h1 class="h3 text-primary fw-bold mb-2">Risk Assessments</h1>
                <div class="text-muted">
                    <div class="mb-1">
                        <strong>Course:</strong> @((ViewBag.CourseName ?? "").ToString())
                    </div>
                    <div>
                        <strong>Assessment:</strong> @((ViewBag.RATitle ?? "").ToString())
                    </div>
                </div>
            </div>
            <div class="d-flex gap-2">
                <a href="@Url.Content("~/Learner/Home/MyCourses")" class="btn btn-outline-secondary" title="Back to My Courses">
                    <i class="fa fa-arrow-left me-1"></i> Back
                </a>
                <button type="button" id="btnCreateNewRARecord" class="btn btn-success" data-bs-toggle="tooltip" title="New Risk Assessment">
                    <i class="fa fa-plus-circle me-1"></i> New Assessment
                </button>
            </div>
        </div>
    </div>


    <!-- Table Section -->
    <div class="x_content">
        <!-- Alert message -->
        <div id="errorRemoveRightMessage" role="alert"></div>

        <div class="table-responsive" id="raReportContainer">
            <table class="table table-striped table-hover table-bordered align-middle" id="tableRACourseList" width="100%" cellspacing="0">
                <thead class="table-light">
                    <tr>
                        <th>Location/Site</th>
                        <th>Course</th>
                        <th>Completion Date</th>
                        <th>Issue</th>
                        <th>Sign Off</th>
                        <th class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- rows injected by JS -->
                </tbody>
            </table>
        </div>
    </div>
</div>
@{
    Html.RenderPartial("_RiskAssessmentModal");
    Html.RenderPartial("_ReviewRAResponses");
}

@section Scripts{
    <script>
        var hdnBaseUrl = '@Url.Content("~/Learner/RiskAssessment/")';
    </script>
    <script type="text/javascript" src="~/js/RiskAssessment/AssessmentReport.js?v=1.3"></script>
}
