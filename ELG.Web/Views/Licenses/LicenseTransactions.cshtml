
@{
    ViewBag.Title = "License Transactions";
    //check admin privileges
    var adminRole = ELG.Web.Helper.SessionHelper.UserRole;
    Layout = ELG.Web.Helper.CommonHelper.GetAdminLayoutPage(adminRole);
}

<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">License Transactions</h1>
<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <div class="row">
            <div class="col-sm-12">
                <div class="form-inline">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroup-sizing-default">User</span>
                        </div>
                        <input type="text" id="txtTransLearner" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" placeholder="Name/Email">
                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="ddlTransCourse">Course</label>
                        </div>
                        <select id="ddlTransCourse" class="custom-select ddl-course">
                            <option value="0">Select All</option>
                        </select>
                    </div>
                </div>
                <div class="form-inline">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="txtTransFromDt">Transaction Between</label>
                        </div>
                        <input type="text" id="txtTransFromDt" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" placeholder="YYYY-MM-DD">
                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="txtTransToDt">-</label>
                        </div>
                        <input type="text" id="txtTransToDt" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" placeholder="YYYY-MM-DD">
                    </div>
                    <div class="input-group mb-3">
                        <button id="searchTransReport" class="btn btn-primary" type="button">
                            <i class="fa fa-search fa-sm"></i> Search
                        </button>
                    </div>
                    <div class="input-group mb-3">
                        <button id="downloadTransReport" class="btn btn-dark" type="button" data-loading-text="Downloading..." data-original-text='<i class="fa fa-download fa-sm"></i> Download'>
                            <i class="fa fa-download fa-sm"></i> Download
                        </button>
                    </div>
                    <div class="input-group mb-3">
                        <button id="clearSearchTransReport" class="btn btn-secondary" type="button">
                            <i class="fa fa-times fa-sm"></i> Clear
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div id="divMessage_LicenseTransactions"></div>
        <div class="table-responsive">
            <table class="table" id="licenseTransactionDataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Course</th>
                        <th>Action</th>
                        <th>License Count</th>
                        <th>User</th>
                        <th>Action By</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section Scripts{
    <script type="text/javascript" src="~/Scripts/Admin/License/LicenseTransaction.js?v=1.1"></script>
}


