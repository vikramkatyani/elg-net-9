
@{
    ViewBag.Title = "Allocate Course";
    //check admin privileges
    var adminRole = ELG.Web.Helper.SessionHelper.UserRole;
    if (adminRole > 0)
    {
        Layout = ELG.Web.Helper.CommonHelper.GetAdminLayoutPage(adminRole);
    }
    else
    {
        <div class="alert alert-danger">Unauthorized access. Please <a href="@Url.Action("LogOut", "Account")">log out</a>.</div>
    }
}

<!-- Page Heading -->
<div class="x_panel tile">
    <!-- Page Heading -->
    <div class="x_title">
        <div class="d-sm-flex align-items-center justify-content-between mb-3">
            <h1 class="h3 mb-0 text-primary fw-bold">
                Individual Allocate: <strong><span id="spnUpdateDocumentName"></span></strong>
            </h1>
            <a href="@Url.Action("ManageAccess", "Document")" id="btnBackToDocumentList" class="btn btn-sm btn-secondary">
                <i class="fa fa-backward me-1"></i> Back
            </a>
        </div>

        <!-- Filter Section -->
        <div class="card mb-4">
            <div class="card-body">
                <div class="row g-3 align-items-end">

                    <!-- User Search -->
                    <div class="col-md-6 col-lg-3">
                        <div class="form-floating">
                            <input type="text" id="txtLearner" class="form-control" placeholder="Name or Email">
                            <label for="txtLearner">User (Name/Email)</label>
                        </div>
                    </div>

                    <!-- Location -->
                    <div class="col-md-6 col-lg-3">
                        <div class="form-floating">
                            <select id="ddlLocation" class="form-select ddl-loc">
                                <option value="0">Select All</option>
                            </select>
                            <label for="ddlLocation">@ELG.Web.Helper.SessionHelper.CompanySettings.strLocationDescription</label>
                        </div>
                    </div>

                    <!-- Department -->
                    <div class="col-md-6 col-lg-3">
                        <div class="form-floating">
                            <select id="ddlDepartment" class="form-select ddl-dep">
                                <option value="0">Select All</option>
                            </select>
                            <label for="ddlDepartment">@ELG.Web.Helper.SessionHelper.CompanySettings.strDepartmentDescription</label>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="col-md-6 col-lg-3 d-flex gap-2 justify-content-end">
                        <button id="searchAllocateDocument" class="btn btn-primary w-100">
                            <i class="fa fa-search me-1"></i> Search
                        </button>
                        <button id="clearSearchAllocateDocument" class="btn btn-secondary w-100">
                            <i class="fa fa-times me-1"></i> Clear
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Results Table -->
    <div class="x_content">
        <div id="divMessage_AllocateDocument"></div>

        <div class="table-responsive" id="div-report-container">
            <div class="d-flex justify-content-end mb-2">
                <button type="button" class="btn btn-dark disabled" id="btnAllocateToSelected"
                        data-bs-toggle="tooltip" title="Select some learners"
                        data-loading-text="Please wait..." data-original-text="Allocate to Selected">
                    Allocate to Selected
                </button>
            </div>

            <table class="table table-striped table-hover table-bordered align-middle" id="allocateIndividualDocumentLearnerList" width="100%">
                <thead class="table-light">
                    <tr>
                        <th>
                            <input type="checkbox" id="chk_slc_all_user_dia">
                            <span class="ms-1">Select All</span>
                        </th>
                        <th>User</th>
                        <th>Email</th>
                        <th>@ELG.Web.Helper.SessionHelper.CompanySettings.strLocationDescription</th>
                        <th>@ELG.Web.Helper.SessionHelper.CompanySettings.strDepartmentDescription</th>
                        <th class="text-center">Action</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

    @section Scripts{
        <script>const currentpageId = "allocate_individual_document";</script>
        <script type="text/javascript" src="~/Scripts/Admin/Document/AllocateDocumentIndividual.js"></script>
    }
