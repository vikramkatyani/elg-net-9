
@{
    ViewBag.Title = "Manage Document Access";
    //check admin privileges
    var adminRole = ELG.Web.Helper.SessionHelper.UserRole;
    if (adminRole > 0)
    {
        Layout = ELG.Web.Helper.CommonHelper.GetAdminLayoutPage(adminRole);
    }
    else
    {
        <div class="alert alert-danger">Unauthorized access. Please <a href="@Url.Action("LogOut", "Account")">log out</a>.</div>
    }
}

<!-- Page Heading -->
<style type="text/css">
    .date-input {
        z-index: 4000 !important;
    }
</style>
<div class="x_panel tile">
    <div class="x_title">
        <h1 class="h3 mb-3 text-primary fw-bold">Access Control</h1>

        <!-- Filter Section -->
        <div class="card mb-4">
            <div class="card-body">
                <div class="row g-3 align-items-end">

                    <!-- Document Name -->
                    <div class="col-md-6 col-lg-3">
                        <div class="form-floating">
                            <input type="text" id="txtDoc" class="form-control" placeholder="Document name">
                            <label for="txtDoc">Document</label>
                        </div>
                    </div>

                    <!-- Category -->
                    <div class="col-md-6 col-lg-3">
                        <div class="form-floating">
                            <select id="ddlCategory" class="form-select ddlCat">
                                <option value="0">Select</option>
                            </select>
                            <label for="ddlCategory">Category</label>
                        </div>
                    </div>

                    <!-- Sub Category -->
                    <div class="col-md-6 col-lg-3">
                        <div class="form-floating">
                            <select id="ddlSubCategory" class="form-select ddlSubCat">
                                <option value="0">Select</option>
                            </select>
                            <label for="ddlSubCategory">Sub Category</label>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="col-md-6 col-lg-3 d-flex gap-2 justify-content-end">
                        <button id="searchDoc" class="btn btn-primary">
                            <i class="fa fa-search me-1"></i> Search
                        </button>
                        <button id="clearSearchDoc" class="btn btn-secondary">
                            <i class="fa fa-times me-1"></i> Clear
                        </button>
                    </div>
                </div>
            </div>

        </div>
    </div>

        <!-- Table Section -->
        <div class="x_content">
            <div id="messageDocument"></div>

            <div class="table-responsive" id="div-report-container">
                <table class="table table-striped table-hover table-bordered align-middle" id="orgDocumentList" width="100%" cellspacing="0">
                    <thead class="table-light">
                        <tr>
                            <th>Name</th>
                            <th>Category</th>
                            <th>Sub Category</th>
                            <th>Version Number</th>
                            <th>Date Published</th>
                            <th>Date of Review</th>
                            <th class="text-center" style="width: 5%;">Action</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
        @section Scripts{
            <script type="text/javascript" src="~/Scripts/Admin/Document/manageDocumentAccess.js?v=1.0.2"></script>
        }
