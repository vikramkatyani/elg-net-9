
@{
    ViewBag.Title = "Document Group";
    //check admin privileges
    var adminRole = ELG.Web.Helper.SessionHelper.UserRole;
    if (adminRole > 0)
    {
        Layout = ELG.Web.Helper.CommonHelper.GetAdminLayoutPage(adminRole);
    }
    else
    {
        <div class="alert alert-danger">Unauthorized access. Please <a href="@Url.Action("LogOut", "Account")">log out</a>.</div>
    }
}

<!-- Page Heading -->

<div class="x_panel tile">
    <div class="x_title">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h1 class="h3 text-primary fw-bold mb-0">Manage Document Groups</h1>

            <button id="btnShowDocGroupPopUp" class="btn btn-success">
                <i class="fa fa-plus-circle me-1"></i> Add Group
            </button>
        </div>

        <!-- Filter Section -->
        <div class="card mb-4">
            <div class="card-body">
                <div class="row g-3 align-items-end">

                    <!-- Document Name -->
                    <div class="col-md-6 col-lg-3">
                        <div class="form-floating">
                            <input type="text" id="txtDoc" class="form-control" placeholder="Group name">
                            <label for="txtDoc">Name</label>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="col-12 d-flex justify-content-end gap-2 mt-3">
                        <button id="searchDoc" class="btn btn-primary">
                            <i class="fa fa-search me-1"></i> Search
                        </button>
                        <button id="clearSearchDoc" class="btn btn-secondary">
                            <i class="fa fa-times me-1"></i> Clear
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Table Section -->
    <div class="x_content">
        <div id="messageDocumentGroup"></div>

        <div class="table-responsive" id="div-report-container">
            <table class="table table-striped table-hover table-bordered align-middle" id="orgDocumentGroupList" width="100%" cellspacing="0">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th>@ELG.Web.Helper.SessionHelper.CompanySettings.strLocationDescription</th>
                        <th>Documents</th>
                        <th class="text-center" style="width: 5%;">Action</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>
@Html.Partial("_addDocumentGroup")

@section Scripts{
    <script type="text/javascript" src="~/Scripts/Admin/Document/manageDocumentGroup.js?v=1.0.3"></script>
}