
@{
    ViewBag.Title = "Announcement Report";

    //check admin privileges
    var adminRole = ELG.Web.Helper.SessionHelper.UserRole;
    Layout = ELG.Web.Helper.CommonHelper.GetAdminLayoutPage(adminRole);
}

<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">Announcement Report</h1>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <div class="row">
            <div class="col-sm-12">
                <div class="form-inline">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroup-sizing-default">Announcement</span>
                        </div>
                        <input type="text" id="txtAnnouncementTitle" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" placeholder="Title">
                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroup-sizing-default">User</span>
                        </div>
                        <input type="text" id="txtLearner" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" placeholder="Name/Email">
                    </div>

                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="ddlLocation">@ELG.Web.Helper.SessionHelper.CompanySettings.strLocationDescription</label>
                        </div>
                        <select id="ddlLocation" class="custom-select ddl-loc">
                            <option value="0">Select All</option>
                        </select>
                    </div>

                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="ddlDepartment">@ELG.Web.Helper.SessionHelper.CompanySettings.strDepartmentDescription</label>
                        </div>
                        <select id="ddlDepartment" class="custom-select ddl-dep">
                            <option value="0">Select All</option>
                        </select>
                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="ddlIsRead">Viewed</label>
                        </div>
                        <select class="custom-select" id="ddlIsRead">
                            <option value="0" selected>Select All</option>
                            <option value="1">Yes</option>
                            <option value="2">No</option>
                        </select>
                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="ddlSignedOff">Viewed between</label>
                        </div>
                        <input type="text" id="txtRptFrom" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" placeholder="YYYY-MM-DD">
                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="ddlSignedOff">-</label>
                        </div>
                        <input type="text" id="txtRptTo" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" placeholder="YYYY-MM-DD">
                    </div>
                    <div class="input-group mb-3">
                        <button id="searchAnnouncementReportBtn" class="btn btn-primary" type="button">
                            <i class="fa fa-search fa-sm"></i> Search
                        </button>
                    </div>
                    <div class="input-group mb-3">
                        <button id="downloadAnnouncementReport" class="btn btn-dark" type="button" data-loading-text="Downloading..." data-original-text='<i class="fa fa-download fa-sm"></i> Download'>
                            <i class="fa fa-download fa-sm"></i> Download
                        </button>
                    </div>
                    <div class="input-group mb-3">
                        <button id="clearSearchAnnouncementReport" class="btn btn-secondary" type="button">
                            <i class="fa fa-times fa-sm"></i> Clear
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table" id="announcementReport" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Announcement Title</th>
                        <th>User</th>
                        <th>Email</th>
                        <th>@ELG.Web.Helper.SessionHelper.CompanySettings.strLocationDescription</th>
                        <th>@ELG.Web.Helper.SessionHelper.CompanySettings.strDepartmentDescription</th>
                        <th>Viewed On</th>
                        <th>Published On</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section Scripts{
    <script type="text/javascript" src="~/Scripts/Admin/Reports/announcementReport.js"></script>
}

