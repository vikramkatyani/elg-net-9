
@{
    ViewBag.Title = "Accident/Incident Report";

    //check admin privileges
    var adminRole = ELG.Web.Helper.SessionHelper.UserRole;
    Layout = ELG.Web.Helper.CommonHelper.GetAdminLayoutPage(adminRole);
}

<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">Accident/Incident Report</h1>

<div class="card shadow mb-4">
    @if (ELG.Web.Helper.SessionHelper.AccidentIncidentFeature > 0)
    {
        <div class="card-header py-3">
            <div class="row">
                <div class="col-sm-12">
                    <div class="form-inline">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="inputGroup-sizing-default">Search</span>
                            </div>
                            <input type="text" id="txtAcciInciLearner" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" placeholder="Search">
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <label class="input-group-text" for="ddlAcciInciSignedOff">Signed Off</label>
                            </div>
                            <select class="custom-select" id="ddlAcciInciSignedOff">
                                <option value="0" selected>Select All</option>
                                <option value="1">Yes</option>
                                <option value="2">No</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-inline">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <label class="input-group-text" for="ddlIsEmployee">Employee</label>
                            </div>
                            <select class="custom-select" id="ddlIsEmployee">
                                <option value="3" selected>Select All</option>
                                <option value="1">Yes</option>
                                <option value="0">No</option>
                            </select>
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <label class="input-group-text" for="ddlIsReportable">Reportable</label>
                            </div>
                            <select class="custom-select" id="ddlIsReportable">
                                <option value="3" selected>Select All</option>
                                <option value="1">Yes</option>
                                <option value="0">No</option>
                            </select>
                        </div>
                        <div class="input-group mb-3">
                            <button id="searchAcciInciReportBtn" class="btn btn-primary" type="button">
                                <i class="fa fa-search fa-sm"></i> Search
                            </button>
                        </div>
                        <div class="input-group mb-3">
                            <button id="downloadAcciInciReport" class="btn btn-dark" type="button" data-loading-text="Downloading..." data-original-text='<i class="fa fa-download fa-sm"></i> Download'>
                                <i class="fa fa-download fa-sm"></i> Download
                            </button>
                        </div>
                        <div class="input-group mb-3">
                            <button id="clearSearchAcciInciReport" class="btn btn-secondary" type="button">
                                <i class="fa fa-times fa-sm"></i> Clear
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table" id="orgAccidentIncidentReport" style="width:100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Reported By</th>
                            <th>Incident Date</th>
                            <th>Reported On</th>
                            <th>Injured Person</th>
                            <th>Created By</th>
                            <th>Employee</th>
                            <th>Permitted Activity</th>
                            <th>Sign Off</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="card-body">
            <div class="alert alert-info">
                This module is not currently enabled for your account, please contact your account manager for further details.
            </div>
        </div>
    }
</div>
 @Html.Partial("_AdminReviewAccidentIncidentReport")
@section Scripts{
    <script type="text/javascript" src="~/Scripts/Admin/Reports/adminAccidentIncidentReport.js"></script>
}


