
@{
    ViewBag.Title = "Document Report";
    //check admin privileges
    var adminRole = ELG.Web.Helper.SessionHelper.UserRole;
    if (adminRole > 0)
    {
        Layout = ELG.Web.Helper.CommonHelper.GetAdminLayoutPage(adminRole);
    }
    else
    {
        <div class="alert alert-danger">Unauthorized access. Please <a href="@Url.Action("LogOut", "Account")">log out</a>.</div>
    }
}

<!-- Page Heading -->
<div class="x_panel tile">
    <div class="x_title">
        <h1 class="h3 mb-3 text-primary fw-bold">Document Report</h1>

        <div class="card mb-4">
            <div class="card-body">
                <!-- Row 1: Main Filters -->
                <div class="row g-3 align-items-end">
                    <div class="col-lg-4 col-md-4 col-sm-6">
                        <div class="form-floating">
                            <input type="text" id="txtLearner" class="form-control" placeholder="Name/Email">
                            <label for="txtLearner">User</label>
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-4 col-sm-6">
                        <div class="form-floating">
                            <select id="ddlLocation" class="form-select ddl-loc">
                                <option value="0">Select All</option>
                            </select>
                            <label for="ddlLocation">@ELG.Web.Helper.SessionHelper.CompanySettings.strLocationDescription</label>
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-4 col-sm-6">
                        <div class="form-floating">
                            <select id="ddlDepartment" class="form-select ddl-dep">
                                <option value="0">Select All</option>
                            </select>
                            <label for="ddlDepartment">@ELG.Web.Helper.SessionHelper.CompanySettings.strDepartmentDescription</label>
                        </div>
                    </div>
                </div>
                <div class="row g-3 align-items-end mt-3">
                    <div class="col-lg-4 col-md-4 col-sm-6">
                        <div class="form-floating">
                            <select id="ddlCategory" class="form-select ddl-category">
                                <option value="0">Select All</option>
                            </select>
                            <label for="ddlCategory">Category</label>
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-4 col-sm-6">
                        <div class="form-floating">
                            <select id="ddlStatus" class="form-select">
                                <option value="0" selected>Select All</option>
                                <option value="1">I confirm that I have read and understood</option>
                                <option value="2">I have read but require clarification</option>
                                <option value="3">N/A</option>
                            </select>
                            <label for="ddlStatus">Status</label>
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-4 col-sm-6">
                        <div class="form-floating">
                            <select id="ddlIssedStatus" class="form-select">
                                <option value="-1">All</option>
                                <option value="1" selected>Yes</option>
                                <option value="0">No</option>
                            </select>
                            <label for="ddlIssedStatus">Issued</label>
                        </div>
                    </div>
                </div>

                <!-- Row 2: Date Filters -->
                <div class="row g-3 align-items-end mt-3">
                    <div class="col-lg-4 col-md-4 col-sm-6">
                        <div class="form-floating">
                            <input type="date" id="txtRptFrom" class="form-control" placeholder="YYYY-MM-DD">
                            <label for="txtRptFrom">Viewed From</label>
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-4 col-sm-6">
                        <div class="form-floating">
                            <input type="date" id="txtRptTo" class="form-control" placeholder="YYYY-MM-DD">
                            <label for="txtRptTo">Viewed To</label>
                        </div>
                    </div>

                    <!-- Row 3: Action Buttons -->
                    <div class="col-lg-4 d-lg-block">
                        <div class="d-flex justify-content-end gap-2">
                            <button id="searchDocumentReportBtn" class="btn btn-primary w-100">
                                <i class="fa fa-search me-1"></i>
                            </button>
                            <button id="downloadDocumentReport" class="btn btn-dark w-100"
                                    data-loading-text="Downloading..."
                                    data-original-text='<i class="fa fa-download"></i> '>
                                <i class="fa fa-download me-1"></i>
                            </button>
                            <button id="clearSearchDocumentReport" class="btn btn-secondary w-100">
                                <i class="fa fa-times me-1"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Table Section -->
    <div class="x_content">
        <div id="message_document_report"></div>
        <div class="table-responsive" id="document-report-container">
            <table class="table table-striped table-hover table-bordered align-middle" id="orgDocumentReport" width="100%" cellspacing="0">
                <thead class="table-light">
                    <tr>
                        <th>User</th>
                        <th>Email</th>
                        <th>@ELG.Web.Helper.SessionHelper.CompanySettings.strLocationDescription</th>
                        <th>@ELG.Web.Helper.SessionHelper.CompanySettings.strDepartmentDescription</th>
                        <th>Category</th>
                        <th>Document</th>
                        <th>Issued</th>
                        <th>Viewed On</th>
                        <th>Status</th>
                        <th>Status On</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- DataTables will populate rows here -->
                </tbody>
            </table>
        </div>
    </div>
</div>

@{
    if (ELG.Web.Helper.SessionHelper.UserRole == 1)
    {
    <div class="modal fade" id="updateLearnerDocInfoModal" tabindex="-1" aria-labelledby="updateLearnerDocInfoModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-scrollable">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <h5 class="modal-title" id="updateLearnerDocInfoModalLabel">Update Document Info</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <!-- Modal Body -->
                <div class="modal-body">
                    <div id="editLearnerDocError" role="alert"></div>

                    <form id="updateLearnerDocForm" class="row g-3">

                        <!-- Status -->
                        <div class="col-md-6 w-100">
                            <div class="form-floating">
                                <select id="ddlDocStatus" class="form-select">
                                    <option value="I confirm that I have read and understood">I confirm that I have read and understood</option>
                                    <option value="I have read but require further clarification from my line manager and will contact them.">I have read but require further clarification from my line manager and will contact them.</option>
                                    <option value="N/A">N/A</option>
                                </select>
                                <label for="ddlDocStatus">Status</label>
                            </div>
                        </div>

                        <!-- Viewed On -->
                        <div class="col-md-6 w-100">
                            <div class="form-floating">
                                <input type="text" id="txtViewedOn" class="form-control popup-calendar" placeholder="YYYY-MM-DD">
                                <label for="txtViewedOn">Viewed On</label>
                            </div>
                        </div>

                        <!-- Status Updated On -->
                        <div class="col-md-6 w-100">
                            <div class="form-floating">
                                <input type="text" id="txtStatusUpdatedOn" class="form-control popup-calendar" placeholder="YYYY-MM-DD">
                                <label for="txtStatusUpdatedOn">Status Updated On</label>
                            </div>
                        </div>

                    </form>
                </div>

                <!-- Modal Footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" id="btnUpdateLearnerDocInfo"
                            data-loading-text="Updating..." data-original-text="Update">
                        Update
                    </button>
                </div>

            </div>
        </div>
    </div>
    }
}



@section Scripts{
    <script type="text/javascript" src="~/Scripts/Admin/Reports/documentReport.js"></script>
}

