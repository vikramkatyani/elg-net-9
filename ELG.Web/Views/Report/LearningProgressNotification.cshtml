        </div>
                    <div class="input-group mb-3">
                        <button id="downloadProgressReport" class="btn btn-dark" type="button" data-loading-text="Downloading..." data-original-text='<i class="fa fa-download fa-sm"></i> Download'>
                            <i class="fa fa-download fa-sm"></i> Download
                        </button>
                    </div>*@
                    <div class="input-group mb-3">
                        <button id="searchLearnerProgress" class="btn btn-primary" type="button">
                            <i class="fa fa-search fa-sm"></i> Search
                        </button>
                    </div>
                    <div class="input-group mb-3">
                        <button id="clearSearchProgressReport" class="btn btn-secondary" type="button">
                            <i class="fa fa-times fa-sm"></i> Clear
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div id="divMessage_ManualNotification"></div>
        <div id="message_manual_notification"></div>
        <div class="table-responsive" id="manual-notification-container">
            <button type="button" class="btn btn-dark float-right disabled" id="btnSendNotificationToSelected" data-toggle="tooltip" title="Select some records" data-loading-text="Please wait..." data-original-text="Send reminders to Selected">Send Reminder to Selected</button>
            <table class="table" id="learningProgressReportForNotification" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        @*<th>@ELG.Web.Helper.SessionHelper.CompanySettings.strEmployeeNumberDescription</th>*@
                        <th></th>
                        <th>User</th>
                        <th>Email</th>
                        <th>@ELG.Web.Helper.SessionHelper.CompanySettings.strLocationDescription</th>
                        <th>@ELG.Web.Helper.SessionHelper.CompanySettings.strDepartmentDescription</th>
                        <th>Course</th>
                        <th>Assigned On</th>
                        <th>Course Status</th>
                        @*<th>Score</th>
                        <th>Completion Date</th>*@
                        <th>Latest Reminder On</th>
                        <th>Action</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
