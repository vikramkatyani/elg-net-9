
@{
    ViewBag.Title = "Widget Report";

    //check admin privileges
    var adminRole = ELG.Web.Helper.SessionHelper.UserRole;
    Layout = ELG.Web.Helper.CommonHelper.GetAdminLayoutPage(adminRole);
}

<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">Widget Report</h1>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <div class="row">
            <div class="col-sm-12">
                <div class="form-inline">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroup-sizing-default">User</span>
                        </div>
                        <input type="text" id="txtLearner" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" placeholder="Name/Email">
                    </div>

                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="inputGroupSelect01">User Status</label>
                        </div>
                        <select id="ddlUserStatus" class="custom-select">
                            <option value="0">Select All</option>
                            <option value="1" selected>Active</option>
                            <option value="2">In-active</option>
                        </select>
                    </div>

                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="inputGroupSelect01">@ELG.Web.Helper.SessionHelper.CompanySettings.strLocationDescription</label>
                        </div>
                        <select id="ddlLocation" class="custom-select ddl-loc">
                            <option value="0">Select All</option>
                        </select>
                    </div>

                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="inputGroupSelect01">@ELG.Web.Helper.SessionHelper.CompanySettings.strDepartmentDescription</label>
                        </div>
                        <select id="ddlDepartment" class="custom-select ddl-dep">
                            <option value="0">Select All</option>
                        </select>
                    </div>

                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="inputGroupSelect01">Course</label>
                        </div>
                        <select id="ddlCourse" class="custom-select ddl-course">
                            <option value="0">Select All</option>
                        </select>
                    </div>
                    @*<div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="ddlAccessStatus">Access Status</label>
                        </div>
                        <select id="ddlAccessStatus" class="custom-select">
                            <option value="0">Active</option>
                            <option value="1">Suspended</option>
                        </select>
                    </div>*@
                </div>
                <div class="form-inline">

                    @*<div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="inputGroupSelect01">Course Status</label>
                        </div>
                        <select id="ddlStatus" class="custom-select">
                            <option value="not-started">Not started</option>
                            <option value="incomplete">In-progress</option>
                            <option value="passed">Passed</option>
                            <option value="failed">Failed</option>
                            <option value="" disabled>--------------</option>
                            <option value="0" selected>Select All</option>
                            <option value="not-passed">Not Passed</option>
                        </select>
                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="ddlSignedOff">Completed Between</label>
                        </div>
                        <input type="text" id="txtRptFrom" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" placeholder="YYYY-MM-DD">
                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="ddlSignedOff">-</label>
                        </div>
                        <input type="text" id="txtRptTo" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" placeholder="YYYY-MM-DD">
                    </div>*@
                    <div class="input-group mb-3">
                        <button id="searchLearnerProgress" class="btn btn-primary" type="button">
                            <i class="fa fa-search fa-sm"></i> Search
                        </button>
                    </div>
                    <div class="input-group mb-3">
                        <button id="downloadProgressReport" class="btn btn-dark" type="button" data-loading-text="Downloading..." data-original-text='<i class="fa fa-download fa-sm"></i> Download'>
                            <i class="fa fa-download fa-sm"></i> Download
                        </button>
                    </div>
                    <div class="input-group mb-3">
                        <button id="clearSearchProgressReport" class="btn btn-secondary" type="button">
                            <i class="fa fa-times fa-sm"></i> Clear
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div id="message_test_report"></div>
        <div class="table-responsive" id="test-report-container">
            <table class="table" id="widgetProgressReport" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>User</th>
                        <th>Email</th>
                        <th>@ELG.Web.Helper.SessionHelper.CompanySettings.strLocationDescription</th>
                        <th>@ELG.Web.Helper.SessionHelper.CompanySettings.strDepartmentDescription</th>
                        <th>Course</th>
                        <th>Widget</th>
                        <th>Question</th>
                        <th>Response</th>
                        <th>First Response</th>
                        <th>Second Response</th>
                        <th>Third Response</th>
                        <th>Follow-up Que</th>
                        <th>Follow-up Response</th>
                        <th>Feedback</th>
                        <th>Comment</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section Scripts{
    <script type="text/javascript" src="~/Scripts/Admin/Reports/widgetProgress.js?v=1.5"></script>
}
