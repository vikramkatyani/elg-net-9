
<div class="modal fade" id="addClassroomModal" tabindex="-1" role="dialog" aria-labelledby="addClassroomModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addClassroomTitle">Add Classroom</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-12">
                        <!--Alert message-->
                        <div class="alert alert-danger collapse" role="alert" id="addClassroomMessage"> </div>
                        <form class="user">
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="lblClassroomName">Title</span>
                                </div>
                                <textarea id="txtClassroomName" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default"></textarea>
                            </div>

                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="lblClassroomDesc">Description</span>
                                </div>
                                <textarea id="txtClassroomDesc" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default"></textarea>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Close</button>
                <button class="btn btn-primary" id="btnCreateClass" data-loading-text="Creating..." data-original-text="Add" href="">Add</button>
            </div>
        </div>
    </div>
</div>


