
<div class="modal fade" id="editRAQModal" tabindex="-1" role="dialog" aria-labelledby="editRAQModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="add_E_RAQTitle">Edit Question</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-12">
                        <!--Alert message-->
                        <div class="alert alert-danger collapse" role="alert" id="messageRAQEdit"> </div>
                        <form class="user">
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <label class="input-group-text" for="ddlEditRAQGroup">Group</label>
                                </div>
                                <select id="ddlEditRAQGroup" class="custom-select ddlGroup">
                                    <option value="0">Select</option>
                                </select>
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="lbl_E_RAQ">Question</span>
                                </div>
                                <input type="text" id="txtEditRAQusetion" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" />
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="lbl_E_RAQ_Order">Order</span>
                                </div>
                                <input type="text" id="txtEditRAQOrder" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" />
                            </div>

                            <button class="btn btn-primary" id="btnAddNewDoc" data-loading-text="Updating..." data-original-text="Update" href="">Update</button>
                        </form>
                        <hr />
                        <div class="table-responsive">
                            <h5>Options</h5>
                            <table class="table" id="edit_raQuestionOptionList" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Order</th>
                                        <th>Option</th>
                                        <th>Issue</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tr id="edit_newOptionRow">
                                    <td><input type="number" class="form-control" value="10" id="txtOptionOrder" /></td>
                                    <td><input type="text" class="form-control" id="txtOption" /></td>
                                    <td><input type="checkbox" id="chkOptionIssue" /></td>
                                    <td>
                                        <button class="btn btn-primary" id="btnAddNewOption" data-loading-text="Creating..." data-original-text="Add Option" href="">Add Option</button>
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="table-responsive">
                            <h5>Add Option</h5>
                            <table class="table" id="edit_newRAQuestionOption" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Order</th>
                                        <th>Option</th>
                                        <th>Issue</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tr id="edit_newOptionRow">
                                    <td><input type="number" class="form-control" value="10" id="txtNewOptionOrder" placeholder="Order" /></td>
                                    <td><input type="text" class="form-control" id="txtNewOption" placeholder="Option" /></td>
                                    <td><input type="checkbox" id="chkNewOptionIssue" /></td>
                                    <td>
                                        <button class="btn btn-primary" id="btnAddNewOption" data-loading-text="Creating..." data-original-text="Add Option" href="">Add Option</button>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>



