
@{
    ViewBag.Title = "Configure Risk Assessment";
    //check admin privileges
    var adminRole = ELG.Web.Helper.SessionHelper.UserRole;
    Layout = ELG.Web.Helper.CommonHelper.GetAdminLayoutPage(adminRole);
}

<div class="x_panel tile">
    <div class="x_title">
        <h1 class="h3 mb-3 text-primary fw-bold">Assessment Setup</h1>

        <!-- Filter Section -->
        <div class="card mb-4">
            <div class="card-body">
                <div class="row g-3 align-items-end">

                    <!-- Risk Assessment Search -->
                    <div class="col-md-6 col-lg-4">
                        <div class="form-floating">
                            <input type="text" id="txtRiskAssessment" class="form-control" placeholder="Name">
                            <label for="txtRiskAssessment">Risk Assessment</label>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="col-md-6 col-lg-4 d-flex gap-2 justify-content-end">
                        <button id="searchRiskAssessmentBtn" class="btn btn-primary">
                            <i class="fa fa-search me-1"></i> Search
                        </button>
                        <button id="clearSearchRABtn" class="btn btn-secondary">
                            <i class="fa fa-times me-1"></i> Clear
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Table Section -->
    <div class="x_content">
        <div class="table-responsive">
            <table class="table table-striped table-hover table-bordered align-middle" id="configureRAList" width="100%" cellspacing="0">
                <thead class="table-light">
                    <tr>
                        <th>Module</th>
                        <th>Complete Within</th>
                        <th>Retake Risk Assessment After</th>
                        <th class="text-center" style="width: 5%;">Action</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>
@{
    Html.Partial("_RiskAssessmnetFrequency");
}
@section Scripts{
    <script type="text/javascript" src="~/Scripts/Admin/CourseManagement/ConfigureRiskAssessment.js?v=1.1"></script>
}

