
<div class="modal fade" id="addRAQModal" tabindex="-1" role="dialog" aria-labelledby="addRAQLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addRAQTitle">Add Question</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-12">
                        <!--Alert message-->
                        <div class="alert alert-danger collapse" role="alert" id="addRAQMessage"> </div>
                        <form class="user">
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <label class="input-group-text" for="ddladdRAQGroup">Group</label>
                                </div>
                                <select id="ddladdRAQGroup" class="custom-select ddlGroup">
                                    <option value="0">Select</option>
                                </select>
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="lblRAQ">Question</span>
                                </div>
                                <input type="text" id="txtRAQ" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" />
                            </div>
                            <button class="btn btn-primary" id="btnAddNewRAQuestion" data-loading-text="Creating..." data-original-text="Add Question" href="">Add Question</button>

                            <div class="table-responsive" id="tableQuestionOptions">
                                <table class="table" id="questionOptionList" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>Order</th>
                                            <th>Option</th>
                                            <th>Issue</th>
                                        </tr>
                                    </thead>
                                    <tr id="newOptionRow">
                                        <td><input type="number" class="form-control" value="10" id="txtOptionOrder" /></td>
                                        <td><input type="text" class="form-control" id="txtOption" /></td>
                                        <td><input type="checkbox" id="chkOptionIssue" /></td>
                                    </tr>
                                </table>
                                <button class="btn btn-primary" id="btnAddOption" data-loading-text="Creating..." data-original-text="Add Option" href="">Add Option</button>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


