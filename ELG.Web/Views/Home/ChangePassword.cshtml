@model ELG.Web.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="x_panel tile">
        <!-- Page Heading -->
        <div class="x_title">
            <h1 class="h3 mb-4 text-primary fw-bold">Update Password</h1>
        </div>

        <div class="x_content">
            <div class="row justify-content-start">
                <div class="col-lg-6">
                    <div class="card">
                        <div class="card-body p-4">
                            <!-- Alert Message -->
                            @if (!string.IsNullOrEmpty(ViewBag.Message as string))
                            {
                                <div class="alert alert-success" id="tempSuccessMsg">@ViewBag.Message</div>
                            }

                            @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

                            @using (Html.BeginForm("ChangePassword", "Home", FormMethod.Post, new { @class = "needs-validation", id = "frmChangePassword", name = "frmChangePassword", novalidate = "novalidate" }))
                            {
                                <div class="form-floating mb-3 w-100">
                                    @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control", placeholder = "Old Password", required = "required" })
                                    <label for="OldPassword">Old Password</label>
                                    @Html.ValidationMessageFor(model => model.OldPassword, "", new { @class = "text-danger small" })
                                </div>

                                <div class="form-floating mb-3 w-100">
                                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", placeholder = "New Password", required = "required" })
                                    <label for="NewPassword">New Password</label>
                                    @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger small" })
                                </div>

                                <div class="form-floating mb-4 w-100">
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm Password", required = "required" })
                                    <label for="ConfirmPassword">Confirm Password</label>
                                    @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger small" })
                                </div>

                                <div class="d-grid">
                                    <button type="submit" class="btn btn-primary" id="btnChangePassword"
                                            data-loading-text="Updating..." data-original-text="Update">
                                        Update
                                    </button>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script type="text/javascript">
                $(function () {
                    UTILS.activateNavigationLink('settingsLink');
                    UTILS.activateMenuNavigationLink('menu-user-password');
                    updateSessionLearnerHandler.getSessionUserInfo();
                })
    </script>

}