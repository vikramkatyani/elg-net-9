@{
    ViewBag.Title = "Dashboard";

    // check admin privileges and set layout
    var adminRole = ELG.Web.Helper.SessionHelper.UserRole;
    Layout = ELG.Web.Helper.CommonHelper.GetAdminLayoutPage(adminRole);
}

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Dashboard</h1>
</div>

<!-- Header -->
<div class="">
    @Html.Partial("_DashboardHeader")
</div>

<!-- Yearly Data -->
<div class="row">
    @Html.Partial("_DashboardYearlyData")
</div>

<!-- Main Content Row -->
<div class="row">
    <!-- Left Column -->
    <div class="col-lg-6 mb-4">
        @Html.Partial("_DashboardLicenceUsage")
        @* If you prefer server-side rendering you can use: @Html.Partial("_DashboardLicenceUsage") *@
    </div>

    <!-- Right Column / Other summaries -->
    <div class="col-lg-6 mb-4">
        @Html.Partial("_DasboardCourseCompletionSummary")
    </div>
</div>

<!-- User quota Row -->
@{
    if (ELG.Web.Helper.SessionHelper.UserRole == 1)
    {
        <div class="row">
            <div class="col-lg-12 mb-4">
                @Html.Partial("_DasboardUserQuotaSummary")
            </div>
        </div>
    }
}





@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.9.1/dist/chart.min.js"></script>
    <script type="text/javascript" src="~/Scripts/Admin/Reports/Dashboard.js"></script>
}