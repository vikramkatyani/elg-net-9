@{

    ViewBag.Title = "Validate Company Number";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

@model List<ELG.Model.OrgAdmin.OrgAdminInfo>

<div class="container">

    <!-- Outer Row -->
    <div class="row justify-content-center">

        <div class="col-xl-6 col-lg-12 col-md-9">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <!-- <div class="col-lg-6 d-none d-lg-block bg-password-image"></div> -->
                        <div class="col-lg-12">
                            <div class="p-5">
                                <img src="~/Content/images/kc-banner.png" alt="LMS" class="login-logo" />
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-2">Select Company</h1>
                                    <p class="mb-4">We found your email registered with more than one company. To login successfuly please click on your company.</p>
                                </div>

                                <!--Alert message-->
                                <div class="alert alert-danger collapse" role="alert" id="divErrorMessage">
                                </div>

                                <form class="user" id="formCompanyValidation">
                                    @*<div class="form-group">
                <input type="text" class="form-control form-control-user" id="companyNumberBox" name="companyNumberBox" placeholder="Enter Company number...">
            </div>
            <button type="button" data-loading-text="Logging..." data-original-text="Login" class="btn btn-primary btn-user btn-block" id="validateCompanyBtn">
                Login
            </button>*@
                                    @if (Model != null && Model.Count > 0)
                                    {
                                        <div>
                                            @foreach (var c in Model)
                                            {
                                                <div class="mb-4 text-center">
                                                    <button type="button" data-loading-text="Please wait..." data-original-text="@c.CompanyNumber - @c.CompanyName." class="btn btn-outline btn-primary" onclick="validateCompanyHandler.validateSelectedCompany(this)" id="validateCompanyBtn-@c.CompanyNumber">
                                                        @c.CompanyNumber - @c.CompanyName
                                                    </button>
                                                </div>
                                            }

                                        </div>
                                    }
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>

</div>
@section Scripts{
    <script type="text/javascript" src="~/Scripts/Admin/Accounts/login.js"></script>
}