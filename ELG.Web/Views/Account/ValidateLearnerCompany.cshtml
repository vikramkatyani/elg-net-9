@model List<ELG.Model.Learner.LearnerInfo>
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Validate Company</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/content/vendor/fontawesome/css/font-awesome.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0">Validate Company</h4>
                    </div>
                    <div class="card-body">
                        <p>Multiple accounts found. Please select your company:</p>
                        
                        <div class="list-group" id="companyList">
                            @if (Model != null && Model.Any())
                            {
                                foreach (var learner in Model)
                                {
                                    <button type="button" class="list-group-item list-group-item-action company-item" 
                                            data-company="@learner.CompanyNumber">
                                        <div class="d-flex w-100 justify-content-between">
                                            <h5 class="mb-1">@learner.CompanyName</h5>
                                            <small>@learner.CompanyNumber</small>
                                        </div>
                                    </button>
                                }
                            }
                        </div>

                        <div class="mt-3">
                            <a href="@Url.Action("Login", "Account")" class="btn btn-secondary">
                                <i class="fa fa-arrow-left"></i> Back to Login
                            </a>
                        </div>

                        <div id="errorMessage" class="alert alert-danger mt-3" style="display: none;"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function() {
            $('.company-item').click(function() {
                var companyNumber = $(this).data('company');
                validateCompany(companyNumber);
            });

            function validateCompany(companyNumber) {
                $.ajax({
                    url: '@Url.Action("ValidateLearnerCompanyNumber", "Account")',
                    type: 'POST',
                    data: { companyNumber: companyNumber },
                    success: function(response) {
                        if (response.err === 0) {
                            window.location.href = response.url;
                        } else {
                            $('#errorMessage').text(response.message).show();
                        }
                    },
                    error: function() {
                        $('#errorMessage').text('An error occurred. Please try again.').show();
                    }
                });
            }
        });
    </script>
</body>
</html>
