
@{
    ViewBag.Title = "Companies";

    //check admin privileges
    var adminRole = ELG.Web.Helper.SessionHelper.UserRole;
    Layout = ELG.Web.Helper.CommonHelper.GetAdminLayoutPage(adminRole);
}

<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">Companies</h1>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <div class="row">
            <div class="col-sm-12">
                <div class="form-inline">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroup-sizing-default">Company</span>
                        </div>
                        <input type="text" id="txtCompany" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" placeholder="Company">
                    </div>
                    <div class="input-group mb-3">
                        <button id="searchCompany" class="btn btn-primary" type="button">
                            <i class="fa fa-search fa-sm"></i> Search
                        </button>
                    </div>
                    <div class="input-group mb-3">
                        <button id="clearSearchCompany" class="btn btn-secondary" type="button">
                            <i class="fa fa-times fa-sm"></i> Clear
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table" id="registeredResellerCompanyList" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Company</th>
                        <th>Admin</th>
                        <th>Created On</th>
                        <th>Expiry Date</th>
                        <th>Action</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@{
    Html.Partial("_CompanyLicenceUsage");
}
@section Scripts{
    <script type="text/javascript" src="~/Scripts/Admin/Reseller/companies.js"></script>
}