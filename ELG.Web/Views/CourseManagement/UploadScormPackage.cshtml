@using ELG.Web.Helper
@{
    ViewBag.Title = "Upload SCORM Package";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Upload SCORM Package</h3>
                </div>
                <div class="card-body text-left">
                    <!-- Quota Status Alert -->
                    @if (ViewBag.QuotaExhausted == true)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <strong><i class="fa fa-exclamation-circle"></i> Quota Exhausted</strong>
                            <p>You have reached the maximum allowed courses: <strong>@ViewBag.CurrentCourseCount / @ViewBag.MaxAllowedCourses</strong></p>
                            <p>Please contact support or delete existing courses to upload new content.</p>
                            @* <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button> *@
                        </div>
                    }
                    @* else if (ViewBag.MaxAllowedCourses != null && ViewBag.MaxAllowedCourses > 0)
                    {
                        <div class="alert alert-info alert-dismissible fade show" role="alert">
                            <strong><i class="fa fa-info-circle"></i> Course Quota</strong>
                            <p>Courses Used: <strong>@ViewBag.CurrentCourseCount / @ViewBag.MaxAllowedCourses</strong></p>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    } *@

                    <form id="scormUploadForm" enctype="multipart/form-data" method="post" action="@Url.Action("UploadScormPackage", "CourseManagement")">
                        <div class="form-group">
                            <label for="CourseTitle" class="form-label">Course Title <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="CourseTitle" name="CourseTitle" placeholder="Enter course title" required maxlength="100" @(ViewBag.QuotaExhausted == true ? "disabled" : "")>
                            <small class="form-text text-muted">Maximum 100 characters</small>
                        </div>

                        <div class="form-group">
                            <label for="CourseDescription" class="form-label">Course Description</label>
                            <textarea class="form-control" id="CourseDescription" name="CourseDescription" rows="4" placeholder="Enter course description" maxlength="400" @(ViewBag.QuotaExhausted == true ? "disabled" : "")></textarea>
                            <small class="form-text text-muted">Maximum 400 characters</small>
                        </div>

                        <div class="form-group">
                            <label for="ScormPackage" class="form-label">SCORM Package (ZIP file) <span class="text-danger">*</span></label>
                            <div class="input-group">
                                <input type="file" class="form-control" id="ScormPackage" name="ScormPackage" accept=".zip" required @(ViewBag.QuotaExhausted == true ? "disabled" : "")>
                            </div>
                            <small class="form-text text-muted">Only ZIP files are allowed. Maximum file size: 500 MB</small>
                            <div id="zipFileError" class="text-danger mt-2" style="display: none;"></div>
                        </div>

                        <div class="form-group">
                            <label for="Thumbnail" class="form-label">Course Thumbnail (Optional)</label>
                            <div class="input-group">
                                <input type="file" class="form-control" id="Thumbnail" name="Thumbnail" accept="image/*" @(ViewBag.QuotaExhausted == true ? "disabled" : "")>
                            </div>
                            <small class="form-text text-muted">Supported formats: JPEG, PNG, GIF, WebP. Maximum file size: 5 MB</small>
                            <div id="thumbnailPreview" class="mt-3"></div>
                            <div id="thumbnailError" class="text-danger mt-2" style="display: none;"></div>
                        </div>

                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-primary" id="uploadBtn" @(ViewBag.QuotaExhausted == true ? "disabled" : "")>
                                <i class="fa fa-upload"></i> Upload SCORM Package
                            </button>
                            @* <a href="@Url.Action("Courses", "CourseManagement")" class="btn btn-secondary">
                                <i class="fa fa-times"></i> Cancel
                            </a> *@
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <style>
        /* Override global form styling for this page */
        #scormUploadForm {
            display: block;
            margin: 0;
        }
        #scormUploadForm .card-body {
            text-align: left;
        }
        input:disabled, textarea:disabled, button:disabled {
            background-color: #e9ecef !important;
            color: #6c757d !important;
            cursor: not-allowed !important;
            opacity: 0.6 !important;
        }
    </style>
    <!-- Toastr CSS and JS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.js"></script>
    
    <!-- Initialize quota values from server -->
    <script>
        window.quotaExhausted = @(ViewBag.QuotaExhausted == true ? "true" : "false");
        window.maxAllowedCourses = @(ViewBag.MaxAllowedCourses ?? 0);
        window.currentCourseCount = @(ViewBag.CurrentCourseCount ?? 0);
    </script>
    
    <!-- Upload SCORM Package functionality -->
    <script src="~/js/course-management/upload-scorm.js"></script>
}
