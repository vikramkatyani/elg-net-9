
@{
    ViewBag.Title = "Allocate Course";
    //check admin privileges
    var adminRole = ELG.Web.Helper.SessionHelper.UserRole;
    Layout = ELG.Web.Helper.CommonHelper.GetAdminLayoutPage(adminRole);
}

<div class="x_panel tile">
    <div class="x_title">
        <h1 class="h3 mb-3 text-primary fw-bold">Hand-Picked Enrollment - Courses</h1>


        <div class="card mb-4">
            <div class="card-body">
                <div class="row g-3 align-items-end">

                    <!-- Course Dropdown -->
                    <div class="col-md-4 col-lg-3">
                        <div class="form-floating">
                            <select id="ddlCourse" class="form-select ddl-course">
                                <option value="0">Select All</option>
                            </select>
                            <label for="ddlCourse">Courses</label>
                        </div>
                    </div>

                    <!-- User Search -->
                    <div class="col-md-4 col-lg-3">
                        <div class="form-floating">
                            <input type="text" id="txtLearner" class="form-control" placeholder="Name/Email">
                            <label for="txtLearner">User</label>
                        </div>
                    </div>

                    <!-- Location Filter -->
                    <div class="col-md-4 col-lg-3">
                        <div class="form-floating">
                            <select id="ddlLocation" class="form-select ddl-loc">
                                <option value="0">Select All</option>
                            </select>
                            <label for="ddlLocation">@ELG.Web.Helper.SessionHelper.CompanySettings.strLocationDescription</label>
                        </div>
                    </div>

                    <!-- Department Filter -->
                    <div class="col-md-4 col-lg-3">
                        <div class="form-floating">
                            <select id="ddlDepartment" class="form-select ddl-dep">
                                <option value="0">Select All</option>
                            </select>
                            <label for="ddlDepartment">@ELG.Web.Helper.SessionHelper.CompanySettings.strDepartmentDescription</label>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="col-12 d-flex justify-content-end gap-2 mt-3">
                        <button id="searchAllocateModule" class="btn btn-primary">
                            <i class="fa fa-search me-1"></i> Search
                        </button>
                        <button id="clearSearchAllocateModule" class="btn btn-secondary">
                            <i class="fa fa-times me-1"></i> Clear
                        </button>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <div class="x_content">
        <div id="divMessage_AllocateModule"></div>

        <div class="table-responsive" id="div-report-container">

            <!-- Info Message -->
            <div id="divLicAllocateInfoMessage" class="alert alert-default mt-4">
                <strong>Important:</strong> The results will only display users who do not currently hold a license for the selected course.
            </div>

            <div class="d-flex justify-content-end mb-2">
                <button type="button" class="btn btn-dark disabled" id="btnAllocateToSelected"
                        data-bs-toggle="tooltip" title="Select some learners"
                        data-loading-text="Please wait..." data-original-text="Allocate to Selected">
                    Allocate to Selected
                </button>
            </div>

            <table class="table table-striped table-hover table-bordered align-middle" id="allocateModuleLearnerList" width="100%" cellspacing="0">
                <thead class="table-light">
                    <tr>
                        <th>
                            <input type="checkbox" name="chk_slc_all_user_ma" id="chk_slc_all_user_ma" value="1">
                            <span class="ms-1">Select All</span>
                        </th>
                        <th>User</th>
                        <th>Email</th>
                        <th>@ELG.Web.Helper.SessionHelper.CompanySettings.strLocationDescription</th>
                        <th>@ELG.Web.Helper.SessionHelper.CompanySettings.strDepartmentDescription</th>
                        <th class="text-center">Action</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

        @section Scripts{
            <script>const currentpageId = "allocate_course";</script>
            <script type="text/javascript" src="~/Scripts/Admin/CourseManagement/AllocateModule.js"></script>
        }
