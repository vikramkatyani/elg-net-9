
@{
    ViewBag.Title = "Configure Course";
    //check admin privileges
    var adminRole = ELG.Web.Helper.SessionHelper.UserRole;
    Layout = ELG.Web.Helper.CommonHelper.GetAdminLayoutPage(adminRole);
}

<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">Configure Course</h1>
<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <div class="row">
            <div class="col-sm-12">
                <div class="form-inline">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroup-sizing-default">Course</span>
                        </div>
                        <input type="text" id="txtModule" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" placeholder="Name">
                    </div>
                    <div class="input-group mb-3">
                        <button id="searchModuleBtn" class="btn btn-primary" type="button">
                            <i class="fa fa-search fa-sm"></i> Search
                        </button>
                    </div>
                    <div class="input-group mb-3">
                        <button id="clearSearchModuleBtn" class="btn btn-secondary" type="button">
                            <i class="fa fa-times fa-sm"></i> Clear
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table" id="configureModuleList" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Module</th>
                        <th>Passing score</th>
                        <th>Complete within</th>
                        <th>Retake Module After</th>
                        <th>Action</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>
 @Html.Partial("_ModuleMinimumPassingScore")
 @Html.Partial("_ModuleNotificationSettings")
@section Scripts{
    <script type="text/javascript" src="~/Scripts/Admin/CourseManagement/ConfigureModule.js"></script>
}

