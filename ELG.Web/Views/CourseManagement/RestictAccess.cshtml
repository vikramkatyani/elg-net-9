
@{
    ViewBag.Title = "Suspend Course Access";
    //check admin privileges
    var adminRole = ELG.Web.Helper.SessionHelper.UserRole;
    Layout = ELG.Web.Helper.CommonHelper.GetAdminLayoutPage(adminRole);
}

<div class="x_panel tile">
    <div class="x_title">
        <h1 class="h3 mb-3 text-primary fw-bold">Restrict Course Access</h1>

        <!-- Filter Section -->
        <div class="card mb-4">
            <div class="card-body">
                <div class="row g-3 align-items-end">

                    <!-- Course Dropdown -->
                    <div class="col-md-4 col-lg-3">
                        <div class="form-floating">
                            <select id="ddlCourse" class="form-select ddl-course">
                                <option value="0">Select All</option>
                            </select>
                            <label for="ddlCourse">Courses</label>
                        </div>
                    </div>

                    <!-- User Search -->
                    <div class="col-md-4 col-lg-3">
                        <div class="form-floating">
                            <input type="text" id="txtLearner" class="form-control" placeholder="Name/Email">
                            <label for="txtLearner">User</label>
                        </div>
                    </div>

                    <!-- Location Filter -->
                    <div class="col-md-4 col-lg-3">
                        <div class="form-floating">
                            <select id="ddlLocation" class="form-select ddl-loc">
                                <option value="0">Select All</option>
                            </select>
                            <label for="ddlLocation">@ELG.Web.Helper.SessionHelper.CompanySettings.strLocationDescription</label>
                        </div>
                    </div>

                    <!-- Department Filter -->
                    <div class="col-md-4 col-lg-3">
                        <div class="form-floating">
                            <select id="ddlDepartment" class="form-select ddl-dep">
                                <option value="0">Select All</option>
                            </select>
                            <label for="ddlDepartment">@ELG.Web.Helper.SessionHelper.CompanySettings.strDepartmentDescription</label>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="col-12 d-flex justify-content-end gap-2 mt-3">
                        <button id="searchRevokeModule" class="btn btn-primary">
                            <i class="fa fa-search me-1"></i> Search
                        </button>
                        <button id="clearSearchRevokeModule" class="btn btn-secondary">
                            <i class="fa fa-times me-1"></i> Clear
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Table Section -->
    <div class="x_content">
        <div id="divMessage_RevokeModule"></div>

        <div class="table-responsive" id="div-report-container">
            <div class="d-flex justify-content-end mb-2">
                <button type="button" class="btn btn-dark disabled" id="btnRevokeFromSelected"
                        data-bs-toggle="tooltip" title="Select some users"
                        data-loading-text="Please wait..." data-original-text="Suspend from Selected">
                    Suspend from Selected
                </button>
            </div>

            <table class="table table-striped table-hover table-bordered align-middle" id="revokeModuleLearnerList" width="100%" cellspacing="0">
                <thead class="table-light">
                    <tr>
                        <th>
                            <input type="checkbox" name="chk_slc_all_user_ra" id="chk_slc_all_user_ra" value="1">
                            <span class="ms-1">Select All</span>
                        </th>
                        <th>User</th>
                        <th>Email</th>
                        <th>@ELG.Web.Helper.SessionHelper.CompanySettings.strLocationDescription</th>
                        <th>@ELG.Web.Helper.SessionHelper.CompanySettings.strDepartmentDescription</th>
                        <th class="text-center">Action</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section Scripts{
    <script>const currentpageId = "suspend_course_access";</script>
    <script type="text/javascript" src="~/Scripts/Admin/CourseManagement/RevokeModule.js?v=2.0"></script>
}