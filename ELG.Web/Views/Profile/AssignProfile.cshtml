@{
    ViewBag.Title = "Assign Profile";
    //check admin privileges
    var adminRole = ELG.Web.Helper.SessionHelper.UserRole;
    Layout = ELG.Web.Helper.CommonHelper.GetAdminLayoutPage(adminRole);
}

<div class="x_panel tile">
    <div class="x_title">
        <!-- Page Heading -->
        <h1 class="h3 mb-2 text-gray-800">Assign Profile</h1>
        <div class="row">
            <div class="col-sm-12">

                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <label class="input-group-text" for="ddlCourse">Profiles</label>
                    </div>
                    <select id="ddlProfiles" class="custom-select ddl-course">
                        <option value="0">Select Profile</option>
                        <option value="1">Profile 1</option>
                        <option value="2">Profile 2</option>
                        <option value="3">Profile 3</option>
                    </select>
                </div>
                <div class="form-inline">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <label class="input-group-text" id="inputGroup-sizing-default">User</label>
                        </div>
                        <input type="text" id="txtLearner" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" placeholder="Name/Email">
                    </div>

                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="inputGroupSelect01">@ELG.Web.Helper.SessionHelper.CompanySettings.strLocationDescription</label>
                        </div>
                        <select id="ddlLocation" class="custom-select ddl-loc">
                            <option value="0">Select All</option>
                        </select>
                    </div>

                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="inputGroupSelect01">@ELG.Web.Helper.SessionHelper.CompanySettings.strDepartmentDescription</label>
                        </div>
                        <select id="ddlDepartment" class="custom-select ddl-dep">
                            <option value="0">Select All</option>
                        </select>
                    </div>

                    <div class="input-group mb-3">
                        <button id="searchAllocateModule" class="btn btn-primary" type="button">
                            <i class="fa fa-search fa-sm"></i> Search
                        </button>
                    </div>
                    <div class="input-group mb-3">
                        <button id="clearSearchAllocateModule" class="btn btn-secondary" type="button">
                            <i class="fa fa-times fa-sm"></i> Clear
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="x_content">
        <div id="divMessage_AllocateModule"></div>
        <div id="info_container">
            <div class="alert alert-info">Please select a Profile to assign</div>
        </div>
        <div id="table_container">
            <div class="table-responsive">
                <button type="button" class="btn btn-dark float-right disabled" id="btnAllocateToSelected" data-toggle="tooltip" title="Select some learners" data-loading-text="Please wait..." data-original-text="Allocate to Selected">Allocate to Selected</button>
                <table class="table" id="allocateModuleLearnerList" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th><input type="checkbox" name="chk_slc_all_user_ma" value="1" id="chk_slc_all_user_ma"><span> Select All</span></th>
                            <th>User</th>
                            <th>Email</th>
                            <th>@ELG.Web.Helper.SessionHelper.CompanySettings.strLocationDescription</th>
                            <th>@ELG.Web.Helper.SessionHelper.CompanySettings.strDepartmentDescription</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr role="row">
                            <td><input type="checkbox" class="chk-user" id="chk-user-4209" name="chk-user-4209"></td>
                            <td class="sorting_1"><span>Steve N</span></td>
                            <td>steve@demo.com</td>
                            <td>Education</td>
                            <td>Schools</td>
                            <td>
                                <button type="button" id="assign-user-4209" class="btn btn-sm btn-primary mb-1" onclick=""><i class="fa fa-fw fa-plus-circle"></i><span>Assign</span></button>
                            </td>
                        </tr>
                        <tr role="row">
                            <td><input type="checkbox" class="chk-user" id="chk-user-4209" name="chk-user-4209"></td>
                            <td class="sorting_1"><span>Jhon Doe</span></td>
                            <td>Jhon@demo.com</td>
                            <td>Education</td>
                            <td>Schools</td>
                            <td>
                                <button type="button" id="assign-user-4209" class="btn btn-sm btn-primary mb-1" onclick=""><i class="fa fa-fw fa-plus-circle"></i><span>Assign</span></button>
                            </td>
                        </tr>
                        <tr role="row">
                            <td><input type="checkbox" class="chk-user" id="chk-user-4209" name="chk-user-4209"></td>
                            <td class="sorting_1"><span>Jane Doe</span></td>
                            <td>Jane@demo.com</td>
                            <td>Education</td>
                            <td>Schools</td>
                            <td>
                                <button type="button" id="assign-user-4209" class="btn btn-sm btn-primary mb-1" onclick=""><i class="fa fa-fw fa-plus-circle"></i><span>Assign</span></button>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <div class="dataTables_info" id="allocateModuleLearnerList_info" role="status" aria-live="polite">Showing 1 to 3 of 3 entries</div>
                <div class="dataTables_paginate paging_simple_numbers" id="allocateModuleLearnerList_paginate">
                    <a class="paginate_button previous disabled" aria-controls="allocateModuleLearnerList" data-dt-idx="0" tabindex="0" id="allocateModuleLearnerList_previous">Previous</a>
                    <span>
                        <a class="paginate_button current" aria-controls="learningProgressReport" data-dt-idx="1" tabindex="0">1</a>
                    </span>
                    <a class="paginate_button next disabled" aria-controls="allocateModuleLearnerList" data-dt-idx="1" tabindex="0" id="allocateModuleLearnerList_next">Next</a>
                </div>
            </div>
        </div>

    </div>
</div>

@section Scripts{
    <script type="text/javascript" src="~/Scripts/Admin/Profile/AssignProfile.js"></script>
}
