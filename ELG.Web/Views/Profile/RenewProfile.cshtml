@{
    ViewBag.Title = "Refresh Profile";
    //check admin privileges
    var adminRole = ELG.Web.Helper.SessionHelper.UserRole;
    Layout = ELG.Web.Helper.CommonHelper.GetAdminLayoutPage(adminRole);
}
<div class="x_panel tile">
    <div class="x_title">
        <!-- Page Heading -->
        <h1 class="h3 mb-2 text-gray-800">Refresh Profile</h1>
        <div class="row">
            <div class="col-lg-6">
                <div class="form-inline">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <label class="input-group-text" id="inputGroup-sizing-default">Profile</label>
                        </div>
                        <input type="text" id="txtProfile" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" placeholder="Name">
                    </div>
                    <div class="input-group mb-3">
                        <button id="searchLearner" class="btn btn-primary" type="button">
                            <i class="fa fa-search fa-sm"></i> Search
                        </button>
                    </div>
                    <div class="input-group mb-3">
                        <button id="clearSearchLearner" class="btn btn-secondary" type="button">
                            <i class="fa fa-times fa-sm"></i> Clear
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="x_content">
        <div id="divMessage_AllocateModule"></div>
        <div id="table_container">
            <div class="table-responsive">
                <table class="table" id="orgProfileList" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Profile</th>
                            <th>Action</th>
                            <th>Details</th>
                            <th>Set Auto Refresh</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Profile 1</td>
                            <td>
                                <button type="button" class="btn btn-sm btn-primary mb-1" onclick="">Reset now</button>
                            </td>
                            <td>
                                <a href="#"><span class="fa fa-eye"></span> View mapped courses</a> | <a href="#"><span class="fa fa-eye"></span> View assignees</a>
                            </td>
                            <td>
                                <div class="form-inline">
                                    <div class="input-group mb-3">
                                        <input type="date" id="" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" placeholder="YYYY-MM-DD">
                                        <div class="input-group-postpend">
                                            <button type="button" class="btn btn-sm btn-primary mb-1" onclick="">Set Date</button>
                                        </div>

                                    </div>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>Profile 2</td>
                            <td>
                                <button type="button" class="btn btn-sm btn-primary mb-1" onclick="">Reset now</button>
                            </td>
                            <td>
                                <a href="#"><span class="fa fa-eye"></span> View mapped courses</a> | <a href="#"><span class="fa fa-eye"></span> View assignees</a>
                            </td>
                            <td>
                                <div class="form-inline">
                                    <div class="input-group mb-3">
                                        <input type="date" id="" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" placeholder="YYYY-MM-DD">
                                        <div class="input-group-postpend">
                                            <button type="button" class="btn btn-sm btn-primary mb-1" onclick="">Set Date</button>
                                        </div>

                                    </div>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>Profile 3</td>
                            <td>
                                <button type="button" class="btn btn-sm btn-primary mb-1" onclick="">Reset now</button>
                            </td>
                            <td>
                                <a href="#"><span class="fa fa-eye"></span> View mapped courses</a> | <a href="#"><span class="fa fa-eye"></span> View assignees</a>
                            </td>
                            <td>
                                <div class="form-inline">
                                    <div class="input-group mb-3">
                                        <input type="date" id="" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" placeholder="YYYY-MM-DD">
                                        <div class="input-group-postpend">
                                            <button type="button" class="btn btn-sm btn-primary mb-1" onclick="">Set Date</button>
                                        </div>

                                    </div>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <div class="dataTables_info" id="allocateModuleLearnerList_info" role="status" aria-live="polite">Showing 1 to 3 of 3 entries</div>
                <div class="dataTables_paginate paging_simple_numbers" id="allocateModuleLearnerList_paginate">
                    <a class="paginate_button previous disabled" aria-controls="allocateModuleLearnerList" data-dt-idx="0" tabindex="0" id="allocateModuleLearnerList_previous">Previous</a>
                    <span>
                        <a class="paginate_button current" aria-controls="learningProgressReport" data-dt-idx="1" tabindex="0">1</a>
                    </span>
                    <a class="paginate_button next disabled" aria-controls="allocateModuleLearnerList" data-dt-idx="1" tabindex="0" id="allocateModuleLearnerList_next">Next</a>
                </div>
            </div>
        </div>

    </div>
</div>

@section Scripts{
    <script type="text/javascript" src="~/Scripts/Admin/Profile/RenewProfile.js"></script>
}

