@{
    ViewBag.Title = "Manage announcements";

    //check admin privileges
    var adminRole = ELG.Web.Helper.SessionHelper.UserRole;
    Layout = ELG.Web.Helper.CommonHelper.GetAdminLayoutPage(adminRole);
}
<link href="~/Content/css/editor.css" rel="stylesheet" type="text/css" />
<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">Manage announcements</h1>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <div class="row">
            <div class="col-sm-12">
                <div class="form-inline">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroup-sizing-default">Announcement</span>
                        </div>
                        <input type="text" id="txtAnnouncement" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" placeholder="Title">
                    </div>

                    <div class="input-group mb-3">
                        <button id="searchAnnouncement" class="btn btn-primary" type="button">
                            <i class="fa fa-search fa-sm"></i> Search
                        </button>
                    </div>
                    <div class="input-group mb-3">
                        <button id="clearSearchAnnouncement" class="btn btn-secondary" type="button">
                            <i class="fa fa-times fa-sm"></i> Clear
                        </button>
                    </div>

                    <div class="mb-3 ml-auto float-right">
                        <button id="btnAddAnnouncement" class="btn btn-secondary" type="button">
                            <i class="fa fa-plus-circle fa-sm"></i> Add Announcement
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div id="announcementMessage"> </div>
        <div class="table-responsive">
            <table class="table" id="orgAnnouncementList" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Publish Date</th>
                        <th>Expiry Date</th>
                        <th>Created On</th>
                        <th>Action</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>
 @Html.Partial("_addEditAnnouncement")

@section Scripts{
    <script type="text/javascript" src="~/Scripts/Admin/Announcement/manageAnnouncement.js"></script>
}

